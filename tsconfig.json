{
  "compilerOptions": {
    "module": "esnext",
    "incremental": true,
    // "noEmit": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "tsconfig.json"
  ],
  "include": [
    "**/*.ts"
  ]
}
